<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zhengzeqin.mymessageboard">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.example.zhengzeqin.mymessageboard.myApplication.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".features.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.LoginActivity"
            android:label="@string/title_activity_login"></activity>
        <activity android:name=".features.RegiterActivity" />
        <activity android:name=".base.BaseActivity" />
        <activity android:name=".features.MessageBoardActivity" />
        <activity android:name=".features.UsersManagerCenterActivity" />
        <activity
            android:name=".features.MessageCenterActivity"
            android:label="@string/title_activity_message_center"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>