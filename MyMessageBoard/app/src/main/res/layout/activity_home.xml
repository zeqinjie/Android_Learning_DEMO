<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhengzeqin.mymessageboard.features.HomeActivity">

    <com.example.zhengzeqin.mymessageboard.customview.NavigationBar
        android:id="@+id/naviagtionbar"
        android:layout_width="match_parent"
        android:layout_height="64dp">
    </com.example.zhengzeqin.mymessageboard.customview.NavigationBar>

    <Button
        android:id="@+id/message_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="留言消息中心"
        android:onClick="messageCenterClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/naviagtionbar" />

    <Button
        android:id="@+id/users_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:text="会员管理中心"
        android:onClick="userManagerCenterClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_center"
        tools:ignore="OnClick" />

</android.support.constraint.ConstraintLayout>

